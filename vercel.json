{
  "framework": "nextjs",
  "outputDirectory": "frontend/.next",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/login",
      "destination": "/api/index.py"
    },
    {
      "source": "/callback",
      "destination": "/api/index.py"
    },
    {
      "source": "/logout",
      "destination": "/api/index.py"
    },
    {
      "source": "/analyze-lyrics",
      "destination": "/api/index.py"
    },
    {
      "source": "/analyze-emotions-background",
      "destination": "/api/index.py"
    }
  ]
}