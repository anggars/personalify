{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "outDir": "./frontend/static/script",
    "rootDir": "./frontend/static/script",
    "strict": false,                 
    "noImplicitAny": false,          
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,                
    "noEmitOnError": false           
  },
  "include": [
    "frontend/static/script/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}